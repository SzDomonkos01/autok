<Window x:Class="autok.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autok"
        mc:Ignorable="d"
        Title="LoginWindow" Height="260" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>

            <TextBlock Text="Jelszó:" />
            <PasswordBox Margin="0 5" PasswordChanged="PasswordBox_PasswordChanged"/>

            <Button x:Name="belepes_BTN" Content="Bejelentkezés" Margin="0,10" Click="belepes_BTN_Click"/>
            <Button x:Name="regisztracio_BTN" Content="Regisztráció" Margin="0,5" Click="regisztracio_BTN_Click"/>
            <TextBlock x:Name="hiba_TB" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
